{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
      ],
    "compilerOptions": {
        "jsx": "preserve",
        "jsxFactory": "h",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "isolatedModules": false,
        "lib": [
        "dom",
        "es5",
        "es2015.promise"
        ],
        "sourceMap": true,
        "pretty": true,
        "baseUrl": "./",
        "paths":{
            "@/*": ["src/*"]
        }
    }
}